@model SimpleWebApp.Models.Product<head>    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>    <!-- Include jQuery UI library -->    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>    <style>        .container {            max-width: 600px;            margin: 0 auto;            padding: 20px;            background-color: #f2f2f2;            border-radius: 8px;            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);        }        h1 {            margin-left: 450px;            color: #333;        }        .form-Box        {                      max-width:400px;            margin:0 auto;            background-color:#fff;            padding:20px;            border-radius:5px;            box-shadow:0 0 10px rgba(0,0,0,0.1);        }        .form-group {            margin-bottom: 20px;        }        label {            display: block;            margin-bottom: 8px;            font-weight: bold;            color: #555;        }        input[type="text"],        input[type="number"],        input[type="datetime"]{            width: 100%;            padding: 10px;            border: 1px solid #ccc;            border-radius: 4px;            font-size: 16px;        }        .btn-primary {            margin-top: 10px;            padding: 12px 24px;            font-size: 16px;            color: #fff;            background-color: #007bff;            border: none;            border-radius: 4px;            cursor: pointer;        }            .btn-primary:hover {                background-color: #0069d9;            }        .error-message {            color: red;            margin-top: 5px;        }        .success-message {            color: green;            margin-top: 5px;        }    </style>    <script>        $(function () {            // Initialize the datepicker            $("#date").datepicker();            // Validate the form before submitting            $(".save-btn").on("click", function (e) {                var productName = $("#product").val();                var price = $("#price").val();                var description = $("#description").val();                // Validate inputs                if (productName.trim() === "") {                    alert("Please enter a product name.");                    e.preventDefault();                    return;                }                if (price.trim() === "") {                    alert("Please enter a price.");                    e.preventDefault();                    return;                }                if (description.trim() === "") {                    alert("Please enter a description.");                    e.preventDefault();                    return;                }                            });        });    </script>    </head><h1>Add Product</h1><div class="form-Box"><form class="form-form" method="post">    <input type="hidden" name="Id" value="@Model.Id">    <div class="form-group">        <label for="product">Product:</label>        <input type="text" class="form-control" id="product" name="product.ProductName" value="@Model.ProductName" required>    </div>    <div class="form-group">        <label for="price">Price:</label>        <input type="text" class="form-control" id="price" name="product.Price" value="@Model.Price" required>    </div>    <div class="form-group">        <label for="description">Description:</label>        <input type="text" class="form-control" id="description" name="product.Description" value="@Model.Description" required>    </div>    <div class="form-group">        <label for="date">Select Date:</label>        <input type="datetime" class="form-control date" id="date" name="product.CreateDate" value="@Model.CreateDate.ToString("yyyy-MM-dd")" @*required*@>    </div>        <button type="submit" class="btn btn-primary save-btn">Save</button></form></div>